<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_edited_part_2"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    tools:context=".HowToPlay">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/howToPlayTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/concertone_regular"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/how_to_play"
                android:textColor="@color/DarkerPastelPurple"
                android:textIsSelectable="false"
                android:textSize="45sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/instruction_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/concertone_regular"
                        android:text="Compare Numbers:"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/instruction_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="@font/overlock_bold"
                        android:text="Two numbers will be presented to you.
                        Carefully read the question and choose the correct number."
                        android:textColor="@color/white"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/instruction_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/concertone_regular"
                        android:text="Order Numbers:"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/instruction_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="@font/overlock_bold"
                        android:text="A few random numbers will be presented to you.
                        Carefully read the question and arrange the numbers accordingly."
                        android:textColor="@color/white"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/instruction_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/concertone_regular"
                        android:text="Compose Numbers:"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/instruction_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="@font/overlock_bold"
                        android:text="A random number will be presented to you.
                        Put together the correct numbers to form the given number."
                        android:textColor="@color/white"
                        android:textSize="26sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/playBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="70dp"
                android:background="@drawable/menu_rounded_button"
                android:fontFamily="@font/overlock_bold"
                android:text="@string/back_to_choose"
                android:textColor="@color/BubblegumPink"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>